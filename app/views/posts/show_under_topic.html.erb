<center>
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Topic ID</th>
      <th>Edit</th>
      <th>delete</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.topic_id %></td>
      <td><%= link_to "Edit",edit_post_path(post) %></td>
      <td><%= button_to "delete",post,method: :delete %></td>
    </tr>
    <% end %>
  </table>
  <td><%= link_to "back", :back %></td>
</center>